<div class="center jumbotron text-center">
<!-- #emoji from https://www.emojicopy.com/ -->
    <h1>🛩 FlightSearcher.com 🛩</h1><br>
    <h3>Prêt à planer?</h3>
</div>

<div class="row">
  <div class="col-md-4 offset-md-4">
    <h3>Chercher un vol ✈</h3>
    <%= form_tag(root_path, method: :get) do %>
      <div class="form-group">
        <label>Date de départ ⌚</label>
        <%= date_field_tag "search[date]", '2018-11-08', class: "form-control" %>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Aéroport de départ 🛫</label>
            <%= select_tag "search[departure_id]", options_from_collection_for_select(Airport.all, "id", "airport_code", "1"), class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <label>Aéroport d'arrivée 🛬</label>
            <%= select_tag "search[arrival_id]", options_from_collection_for_select(Airport.all, "id", "airport_code", "1"), class: "form-control" %>
          </div>
        </div>
      </div>
      <%= submit_tag 'Search', class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>

<br>
<% if @flights == "empty"%>
  <h4 class="text-center">😢 Yo la recherche n'a rien donné 🤯</h4>
<% elsif @flights%>
  <h4 class="px-5">Voici les <%=@flights.count%> résultats de vols entre <strong><%=@flights.first.departure_airport.airport_code%></strong> et <strong><%=@flights.first.arrival_airport.airport_code%></strong> le <strong><%=@flights.first.departure_date.strftime("%e/%-m/%Y")%></strong></h4>
  <div class="row">
    <% @flights.each do |flight| %>
      <div class="card col-lg-3" >
        <div class="card-body">
          <div style="diplay: flex">
            <h5 class="card-title"> 
              <strong> 👩‍✈️Numéro de vol : <%= flight.id %>  👨‍✈️</strong>
            </h5>
          </div>
          <p class="card-text" > <strong>Durée</strong>: <%=flight.duration%> minutes </p>
        </div>
      </div>
    <% end %>
  </div>
<%end%>

